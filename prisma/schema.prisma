generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id        String           @id @default(cuid())
  createdAt DateTime        @default(now())
  title     String?         @default("Новый чат")
  facts     String?         // JSON key-value для Sticky Facts
  messages  Message[]
  summaries SessionSummary[]
  branches  Branch[]
}

model Branch {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  name      String   // "Основная", "Ветка 1", ...
  baseCount Int      // сколько сообщений из main (branchId=null) входят в базу ветки
  createdAt DateTime @default(now())
  messages  Message[]
}

model SessionSummary {
  id         String   @id @default(cuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  chunkIndex Int      // 0 = first 10 messages, 1 = next 10, ...
  content    String
  createdAt  DateTime @default(now())

  @@unique([sessionId, chunkIndex])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  branchId  String?  // null = основная ветка
  branch    Branch?  @relation(fields: [branchId], references: [id], onDelete: Cascade)
  role      String   // system | user | assistant
  content   String
  createdAt DateTime @default(now())
}
